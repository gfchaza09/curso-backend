<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Vista de Productos</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container mt-3">
      <!-- incrustar estilos -->
      <%- include('./styles/productos.ejs') %>

      <div class="jumbotron">
        <h1>Vista de Productos</h1>
        <br />
        <!-- el valor hayProductos deberia llegar del servidor como un flag boolean para saber si el arreglo esta vacio o lleno -->
        <% if(hayProductos){ %>
        <div class="table-responsive">
          <table class="table table-dark">
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Foto</th>
            </tr>
            <!-- implementar foreach para cargar productos -->
            <% for (const producto of productos) {%>
            <tr>
              <td><%=producto.title%></td>
              <td>$<%=producto.price%></td>
              <td>
                <img src="<%=producto.thumbnail%>" alt="producto" class="img" />
              </td>
            </tr>
            <%};%>
          </table>
        </div>
        <% } else{ %>
        <h3 class="alert alert-danger">No se encontraron productos</h3>
        <% } %>

        <br />
        <a href="/" class="btn btn-primary">Cargar un nuevo producto</a>
      </div>
    </div>
  </body>
</html>
